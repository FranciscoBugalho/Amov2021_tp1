<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/ac_tv_radius"
    app:cardElevation="@dimen/ac_tv_radius"
    android:layout_margin="@dimen/mpl_cv_layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:background="@color/semi_white"
            android:text=""
            android:textStyle="bold"
            android:textSize="@dimen/mpl_list_name_text_size"
            android:padding="@dimen/mpl_tc_tv_padding" />
        <TextView
            android:id="@+id/productList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/light_golden"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/mpl_product_list_text_size"
            android:padding="@dimen/mpl_tc_tv_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:background="@color/dark_yellow"
                android:textColor="@color/black"
                android:textSize="@dimen/mpl_view_details_text_size"
                android:padding="@dimen/mpl_tc_tv_padding" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="end"
                android:background="@color/dark_yellow"
                android:textColor="@color/black"
                android:textSize="@dimen/mpl_view_details_text_size"
                android:padding="@dimen/mpl_tc_tv_padding" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>