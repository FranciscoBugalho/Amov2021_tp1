<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linearlayout_background"
    tools:context=".ManageProductListsActivity"
    android:id="@+id/clManageProductLists">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductList"
        android:padding="@dimen/default_padding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addNewList"
        android:layout_width="@dimen/mpl_plus_btn_size"
        android:layout_height="@dimen/mpl_plus_btn_size"
        android:layout_margin="@dimen/mpl_btn_plus_margin"
        android:background="@drawable/rounded_button_new_list"
        android:gravity="center"
        android:text="@string/plus_sign"
        android:textColor="@color/black"
        android:textSize="@dimen/mpl_plus_btn_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>