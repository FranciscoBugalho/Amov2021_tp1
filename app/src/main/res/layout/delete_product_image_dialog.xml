<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/aud_ll_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_that_you_want_to_delete_the_product_image_title"
        android:textSize="@dimen/aud_tv_title_text_size"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aud_ll_buttons_margin_top">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btns_ripple_main_activity"
            android:text="@string/dpi_dialog_btn_text_no"
            android:textColor="@color/black"
            android:textSize="@dimen/aud_btns_text_size"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/aud_btns_margins" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btns_ripple_main_activity"
            android:text="@string/dpi_dialog_btn_text_yes"
            android:textColor="@color/black"
            android:textSize="@dimen/aud_btns_text_size"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/aud_btns_margins" />

    </LinearLayout>

</LinearLayout>