<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBoughtListDetailsActivity"
    android:background="@drawable/linearlayout_background"
    android:padding="@dimen/default_padding"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tvTitleBoughtList"
        android:padding="@dimen/app_tv_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_tv_title_text_size"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rounded_corners_textviews"
        android:elevation="@dimen/ac_tv_elevation" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <TextView
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_tv_title_text_size"
            android:text="@string/avbld_tv_bought_date_text"
            android:textColor="@color/black"
            android:elevation="@dimen/ac_tv_elevation"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/tvBoughtDate"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_tv_title_text_size"
            android:textColor="@color/black"
            android:elevation="@dimen/ac_tv_elevation"
            android:layout_gravity="end"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="@dimen/app_sv_margins"
        android:layout_marginBottom="@dimen/app_sv_margins"
        android:padding="@dimen/cnpl_ll_padding" >

        <LinearLayout
            android:id="@+id/llAllBoughtProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">


        </LinearLayout>

    </ScrollView>

</LinearLayout>